	editora = {Victorri, Bernard},
	editoratype = {collaborator},
	urldate = {2022-04-14},
	date = {2008-01-01},
	keywords = {Traitement automatique du langage naturel, Catégorisation (linguistique), Linguistique, Métonymie, Référence (linguistique)},
}

